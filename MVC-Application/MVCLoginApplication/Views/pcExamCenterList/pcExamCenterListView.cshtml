@model MVCLoginApplication.Models.pcExamCenterListModel
@{
    ViewBag.Title = "pcExamCenterListView";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"></script>

    <!-- jQuery & jQuery UI -->
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <script src="https://code.jquery.com/ui/1.14.1/jquery-ui.js"></script>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.14.1/themes/base/jquery-ui.css">

    <style>
        * {
            font-family: Tahoma;
        }

        .headerDiv {
            max-width: 600px; /* Limit the maximum width */
            margin: auto; /* Center the div */
        }

        .btnOrg {
            background: rgb(255, 132, 9);
            border: none;
            outline: none;
            border-radius: 4px;
            padding: 8px;
            color: #fff;
        }

        .bgGrey {
            background: #ccc;
        }
    </style>
</head>

<body>
    @using (Html.BeginForm(null, null, new { @area = "", @id = string.Empty }, FormMethod.Post, new { @id = "pcExamCenterListView", @name = "pcExamCenterListView", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="container-fluid">
            <div class="border mt-3 headerDiv">
                <label class="form-label form-label-sm w-100 p-1 bgGrey">List OF Exam Centers</label>
                <label class="form-label form-label-sm p-1">Search Exam Center</label>
                <div class="d-flex flex-column flex-sm-row gap-4 p-1">
                    <div class="d-flex flex-column flex-sm-row gap-2 col-md-6">
                        <label class="form-label form-label-sm"> Show Exam Center's that</label>
                        <select class="form-select form-select-sm">
                            <option value="">Starts with</option>
                            <option value="">Contains</option>
                            <option value="">Ends with</option>
                            <option value="">Is Exactly Like</option>
                        </select>
                    </div>
                    <input type="text" class="form-control" aria-describedby="inputGroup-sizing-sm">
                </div>
                <div class="d-flex flex-column flex-sm-row gap-2 p-2">
                    <label class="form-label form-label-sm">From the District</label>
                    <select class="form-select form-select-sm "
                            id="ddlEditDistrict"
                            name="txtSelectedDistrictValue">
                        @{
                            foreach (var item in Model.ddlEditDistrict)
                            {
                                <option value="@item.Value". @(item.Selected == true ? "selected=\"selected\"" : "")>@item.Text</option>

                                }
                            }
                    </select>
                </div>
                <div class="d-flex justify-content-end p-1 bgGrey">
                    <button class="btn btn-sm me-2 btnOrg btnShow" type="button">Show</button>
                    <button class="btn btn-sm me-2 btnOrg" type="reset">Refresh</button>
                </div>
            </div>

            <div class="hiddenDiv" style="display:none; padding: 0px 20px;">
                <label class="form-label form-label-sm mt-2">
                    <b> List of Exam Centers</b>
                </label>

                <div class="table-responsive">
                    <table class="table table-bordered" style="font-size: 13px; border: 1px solid #ccc;">
                        <thead style="font-size: 14px;">
                            <tr class="text-center">
                                <th style="width:8%;">Sr. No.</th>
                                <th>Center Code</th>
                                <th style="width: 70%;">Center Name and Address</th>
                                <th>Tel. No.</th>
                            </tr>
                            <tr>
                                <th colspan="4">District: AHILYANAGAR</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1.</td>
                                <td>17210092</td>
                                <td>
                                    <b>ABASAHEB KAKADE JR. COLLEGE, SHEVGAON</b>
                                    <p>ABASAHEB KAKADE JR.COLLEGE,SHEVGAON, SHEVGAON, SHEVGAON, AHILYANAGAR</p>
                                </td>
                                <td>0-8805982127</td>
                            </tr>
                            <tr>
                                <td>2.</td>
                                <td>17210178</td>
                                <td>
                                    <b>ABHINAV COMPUTER TECHNICAL INSTITUTE</b>
                                    <p>TRIMURTI CHAWK, NEAR BHARAT GAS GODOWN, PIPELINE ROAD , AHILYANAGAR, AHILYANAGAR, Nagar, AHILYANAGAR</p>
                                </td>
                                <td>0-9921384896</td>
                            </tr>
                            <tr>
                                <td>3.</td>
                                <td>17210178</td>
                                <td>
                                    <b>ANUKUL COMPUTERS</b>
                                    <p>7285, CENTRAL BANK ROAD, OPP. DASI PAN, AHILYANAGAR, AHILYANAGAR, Nagar, AHILYANAGAR</p>
                                </td>
                                <td>0-9970415929</td>
                            </tr>
                            <tr>
                                <td>4.</td>
